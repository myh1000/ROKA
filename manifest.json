{
  "manifest_version": 2,
  "name": "RoKA (Reddit on KissAnime)",
  "short_name": "ROKA",
  "description": "Adds Reddit comments to KissAnime, KissManga",
  "author": "myh1000",
  "homepage_url": "https://github.com/myh1000/RoKA",
  "version": "1.0",
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png" },
  "minimum_chrome_version": "41.0",
  "content_security_policy": "script-src 'self' https://api.reddit.com; object-src 'self'",
  "options_page": "res/options.html",
  "default_locale": "en",

  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/*", "*://kissanime.ru/*", "*://kissmanga.com/*"],
      "js": ["js/snuownd.js", "js/script.js", "js/running.js"],
      "css": ["res/style.css"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "http://www.youtube.com/",
    "https://www.youtube.com/",
    "https://api.reddit.com/",
    "http://kissanime.ru/",
    "http://kissmanga.com/",
    "storage"
  ],

  "web_accessible_resources": [
    "res/style.css",
    "res/chrome_shared.css",
    "res/widgets.css",
    "js/*",
    "res/*",
    "TypeScript/*",
    "icon128.png"
  ]
}
